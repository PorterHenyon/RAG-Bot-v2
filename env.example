# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
SUPPORT_FORUM_CHANNEL_ID=your_forum_channel_id_here
DISCORD_GUILD_ID=your_server_guild_id_here

# Groq API Configuration
# Primary key (required) - Get keys at https://console.groq.com/keys
# Groq provides fast, cheap LLM inference with reliable API keys
GROQ_API_KEY=your_groq_api_key_here

# Optional: Additional keys for automatic rotation (increase rate limits)
# The bot will automatically load and rotate between all available keys
# GROQ_API_KEY_2=your_second_api_key_here
# GROQ_API_KEY_3=your_third_api_key_here
# GROQ_API_KEY_4=your_fourth_api_key_here
# GROQ_API_KEY_5=your_fifth_api_key_here
# GROQ_API_KEY_6=your_sixth_api_key_here

# Dashboard API URL (Vercel deployment)
DATA_API_URL=https://your-app.vercel.app/api/data

# Discord OAuth Configuration (for Dashboard)
# Get these values from https://discord.com/developers/applications
VITE_DISCORD_CLIENT_ID=your_discord_client_id_here
VITE_DISCORD_REDIRECT_URI=http://localhost:5173/callback

# For production deployment (e.g., Vercel):
# VITE_DISCORD_REDIRECT_URI=https://your-domain.vercel.app/callback

# Vercel KV (for production data persistence)
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token

# Pinecone Vector Database (for cost-effective vector search)
# Get your API key from https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=rag-bot-index
PINECONE_ENVIRONMENT=us-east-1

# Enable embeddings/vector search (set to true to enable)
# With Pinecone, this is much more cost-effective than local CPU-based vector search
ENABLE_EMBEDDINGS=true
